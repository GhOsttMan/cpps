extends ../layouts/layout.pug

block content
  .row#fill-view
    .col-sm
      if ( superUser )
        .text-center
          a(href='/notebook/add-note') #[i.fa.fa-plus] Add
          a.ml-1(href=`/notebook/edit-note/${note.slug}`) #[i.fa.fa-edit] Edit
          <br/>
          small
            span Created By: #{note.createdBy} &nbsp;&nbsp;&nbsp;
            span Updated By: #{note.lastUpdatedBy} &nbsp;&nbsp;&nbsp;

      .markdown-body.
        <h1> #{note.title} </h1>
        <small>
          Created At: #{note.createdAt.toDateString()} &nbsp;&nbsp;&nbsp;
          Updated At: #{note.updatedAt.toDateString()}
        </small>
        <br/>
        <br/>
        !{note.body}
