extends ../layouts/layout.pug

block content
  .row.align-items-center#fill-view.m-b-1
    .col.text-center
      h3 Add New Note
      form(action='/notebook/add-note', method='post')
        .form-group
          label(for='title') Title
          input.form-control(id='title', name='title',type='text',required, value=title)
        .form-group
          label(for='slug') Slug
          input.form-control(id='slug',name='slug',type='text', pattern='[a-z0-9\-]+', title='Small letters, digits and hyphens only',required, value=slug)
        .form-group
          label(for='body') Body
          textarea.form-control(id='body',name='body')= body
        button.btn.btn-success.ml-1#previewButton(type='button',data-toggle="modal", data-target="#preview") Preview
        input.btn.btn-primary.ml-1.disableOnClick(type='submit', value='Insert')
        a.btn.btn-secondary.ml-1(href='/notebook') Cancel

  #preview.modal.fade(tabindex="-1",role='dialog', aria-labelledby="previewLabel")
    .modal-dialog(role="document", style="max-width: 70%;")
      .modal-content
        .modal-header
          h4.modal-title(id='previewLabel') Preview
          button.close(type='button', data-dismiss='modal') &times;
        .modal-body#previewBody
        .modal-footer
          button.btn.btn-secondary.ml-1(data-dismiss='modal') Cancel

block scripts
  script( defer src="/js/notebook/previewNote.js")
