extends ../layouts/layout.pug

block content
  .row.align-items-center#fill-view
    .offset-sm-3.col-sm-6.text-center
      h3 Profile Page
      ul.list-group
        .list-group-item
          .row
            .col-2
              i.fa.fa-envelope
            .col-8
              span= email
        .list-group-item
          .row
            .col-2
              i.fa.fa-key
            .col-8
              a(href='/user/profile/change-password') Change Password
        .list-group-item
          .row
            .col-2
              i.fa.fa-users
            .col-8
              span= status[0].toUpperCase() + status.slice(1)
