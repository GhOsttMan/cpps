extends ../layouts/layout.pug

block content
  .row.align-items-center#fill-view
    .offset-sm-3.col-sm-6.text-center
      h2 Invite User
      form(action='/user/invite', method='post')
        .form-group
          label(for='email') Email
          input.form-control( id='email', name='email', type='email', maxlength=256, required, placeholder='Enter Email')
        .form-group
          label(for='password') Password
          input.form-control( id='password', name='password', type='password', minlength=6, maxlength=256, title='Must be between 6 to 256 characters', required, placeholder='Enter Password' )
        input.btn.btn-primary(type='submit', value='Invite')
